/ {
	#address-cells = <1>;
	#size-cells = <1>;

	cpus {
		#address-cells = <1>;
		#size-cells = <0>;
		cpu@0 {
			compatible = "riscv";
			device_type = "cpu";
			reg = <0>;
			riscv,isa = "rv64imafd";
			
			hlic: interrupt-controller {
				#interrupt-cells = <1>;
				compatible = "riscv,cpu-intc";
				interrupt-controller;
			};
		};
	};

	soc {
		#address-cells = <1>;
		#size-cells = <1>;
		compatible = "simple-bus";
		ranges;

		sram0: memory@80040000 {
			compatible = "mmio-sram";
			reg = <0x80040000 0x40000>;
		};

		clint: clint@300000 {
			#interrupt-cells = <1>;
			compatible = "riscv,clint0";
			interrupt-controller;
			interrupts-extended = <&hlic 3 &hlic 7>;
			reg = <0x300000 0x10000>;
			reg-names = "control";
		};

		uart0: serial@100000 {
			compatible = "ns16550";
			reg = <0x100000 0x1000>;
			reg-names = "control";
			label = "uart_0";
			clock-frequency = <66000000>;
			current-speed = <115200>;
			status = "disabled";
		};



	};
};
